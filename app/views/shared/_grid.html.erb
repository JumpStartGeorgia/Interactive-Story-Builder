<div class="grid-wrapper">
  <div class="grid col-4">
    <% if @stories.blank? %>
      <p>
        <%= t('.no_stories') %>
      </p>
    <% else %>
      <% @stories.each_with_index do |story,s_i| %>
        <% story.set_to_app_locale %>
        <div class="col n-3" lang="<%= story.current_locale %>">
          <%= render partial: "shared/grid_item" , locals:{:story=>story} %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= page_navigation_links @stories %>
</div>


<% if @editable %>
  <% content_for(:footer) { %>
    <script>var reviewer = "<%= escape_javascript(render :partial => 'shared/story_nav_modals') %>";</script>
  <% } %>
<% end %>



