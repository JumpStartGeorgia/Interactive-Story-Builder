<%- model_class = StoryType -%>
<%- model_class_trans = StoryTypeTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

<div>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_story_types_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_story_type_path(@story_type), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_story_type_path(@story_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
  <%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn btn-default' %>
</div>

  <p><strong><%= model_class_trans.human_attribute_name(:name) %>:</strong>
  <%= @story_type.name %></p>

  <p><strong><%= model_class.human_attribute_name(:sort_order) %>:</strong>
  <%= @story_type.sort_order %></p>

