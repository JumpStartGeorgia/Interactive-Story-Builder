<%- model_class = Highlight -%>
<%- model_class_trans = HighlightTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>


<div>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_highlights_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_highlight_path(@item), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_highlight_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
  <%= link_to t('helpers.links.admin'), admin_path, :class => 'btn btn-default' %>
</div>

<p><strong><%= model_class_trans.human_attribute_name(:caption) %>:</strong>
<%= @item.name %></p>

<p><strong><%= model_class.human_attribute_name(:url) %>:</strong></p>




