          <ul class="dropdown-menu">
            <% @themes_published.each do |theme| %>
              <li class="story-type">
                <%= link_to theme.formatted_name, theme_path(theme.permalink) %>
              </li>
            <% end %>
          </ul>
      </li>
      <div class="separator-hor"></div>
      <li class="dropdown dropdown-hover">
